extends layout

block content
  // Begin Page Content
  .container-fluid
    // Page Heading
    .d-sm-flex.align-items-center.justify-content-between.mb-4
      h1.h3.mb-0.text-gray-800 Dashboard
    // Content Row
    .row
      // Earnings (Monthly) Card Example
      .col-xl-3.col-md-6.mb-4
        .card.border-left-primary.shadow.h-100.py-2
          .card-body
            .row.no-gutters.align-items-center
              .col.mr-2
                .text-xs.font-weight-bold.text-primary.text-uppercase.mb-1 Company
                .h5.mb-0.font-weight-bold.text-gray-800 #{numOfCompanies}
              .col-auto
                i.fas.fa-building.fa-2x.text-gray-300
      // Earnings (Monthly) Card Example
      .col-xl-3.col-md-6.mb-4
        .card.border-left-success.shadow.h-100.py-2
          .card-body
            .row.no-gutters.align-items-center
              .col.mr-2
                .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Sites
                .h5.mb-0.font-weight-bold.text-gray-800 #{numOfSites}
              .col-auto
                i.fas.fa-sitemap.fa-2x.text-gray-300
      // Earnings (Monthly) Card Example
      .col-xl-3.col-md-6.mb-4
        .card.border-left-info.shadow.h-100.py-2
          .card-body
            .row.no-gutters.align-items-center
              .col.mr-2
                .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Devices
                .row.no-gutters.align-items-center
                  .col-auto
                    .h5.mb-0.mr-3.font-weight-bold.text-gray-800 #{numOfDevices}
                  .col
              .col-auto
                i.fas.fa-desktop.fa-2x.text-gray-300
      // Pending Requests Card Example
      .col-xl-3.col-md-6.mb-4
        .card.border-left-warning.shadow.h-100.py-2
          .card-body
            .row.no-gutters.align-items-center
              .col.mr-2
                .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Users
                .h5.mb-0.font-weight-bold.text-gray-800 #{numOfUsers}
              .col-auto
                i.fas.fa-comments.fa-2x.text-gray-300
          // End of Main Content
      // Content Row
    .row
      // Content Column
      .col-lg-12.mb-4
        // Page Heading
        
        // DataTales Example
        .card.shadow.mb-4
          .card-header.py-3
            h6.m-0.font-weight-bold.text-primary Available Sites
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%', cellspacing='15')
                thead
                  tr
                    th Site Name
                    th Address
                    th City
                    th County
                    th Postcode
                    th Country
                    th Contact
                    th Status
                tfoot
                  tr
                    th Site Name
                    th Address
                    th City
                    th County
                    th Postcode
                    th Country
                    th Contact
                    th Status
                tbody
                  each site, i in sites
                    tr
                      td
                        a(href="/sites/"+site._id)=site.name
                      td
                        = site.address
                      td
                        = site.city
                      td
                        = site.county
                      td
                        = site.postcode
                      td
                        = site.country
                      td
                        = site.phonenumber
                      td
                        if site.status == "Active"
                          span.label.label-success #{site.status}
                        else
                          span.label.label-danger #{site.status}
      // /.End of datatable
  // /.container-fluid
  // End of Main Content
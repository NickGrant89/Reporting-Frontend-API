extends layout2

block content
  #page-wrapper
        .row
          .col-lg-12
            h3.page-header #{title}
          .row
            .col-lg-12
              br
            // /.col-lg-12
          // /.row
          .row
            .col-lg-12
              != messages('message', locals)
              .panel.panel-default
                .panel-heading
                  | Sites
                // /.panel-heading
                .panel-body
                  table#dataTables-example.table.table-striped.table-bordered.table-hover(width="100%")
                    thead
                      tr
                        th Site Name
                        th Address
                        th City
                        th County
                        th Postcode
                        th Country
                        th Contact
                        th Status
                    tbody
                      each site, i in sites
                        if user
                          if user.company == site.company || user.admin == "Super Admin"
                            tr.odd.gradeX
                              td
                                a(href="/sites/"+site._id)=site.name
                              td
                                = site.address
                              td
                                = site.city
                              td
                                = site.county
                              td
                                = site.postcode
                              td
                                = site.country
                              td
                                = site.phonenumber
                              td
                                if site.status == "Active"
                                  span.label.label-success #{site.status}
                                else
                                  span.label.label-danger #{site.status}  
                  // /.table-responsive
                // /.panel-body
              // /.panel
            // /.col-lg-6
          // /.row
          // /#page-wrapper
          // /#wrapper

extends layout2

block content
  #page-wrapper
        .row
          .col-lg-12
            h1.page-header #{title}
          .row
            .col-lg-12
              br
              form(method='POST', action='/devices/add')
                #form-group
                    label PC Name:
                    input.form-control(name='pcname', type='text')
                #form-group
                    label IP Address:
                    input.form-control(name='ipaddress', type='text')
                #form-group
                    label Mac Address:
                    input.form-control(name='macaddress', type='text')
                #form-group
                    label Company:
                    select.form-control(name='company', type='text')
                        each company, i in companies
                            option #{company.name} 
                #form-group
                    label Site:
                    select.form-control(name='site', type='text')
                        each site, i in sites
                            option #{site.name}
                    br       
                input.btn.btn-primary(type='submit', value='Submit')

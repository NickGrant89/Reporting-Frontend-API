extends layout2

block content
  #page-wrapper
    .row
    .col-lg-12
        h3.page-header Company Information
    .row
        .col-lg-12
        // /.col-lg-12
    // /.row
    .row
        .col-lg-12
          .panel.panel-default
            .panel-heading
               h5 Sites
            // /.panel-heading
            .panel-body
              // Nav tabs
              ul.nav.nav-tabs
                li.active
                  a(href="#home" data-toggle="tab") Home
                li
                  a(href="#devices" data-toggle="tab") Devices
                li
                  a(href="#users" data-toggle="tab") Users
              // Tab panes
              .tab-content
                #home.tab-pane.fade.in.active
                  .row
                    .col-lg-12
                        .panel.panel-default
                        .panel-heading
                         
                        // /.panel-heading
                        .panel-body
                        table#dataTables-example.table.table-striped.table-bordered.table-hover(width="100%")
                            thead
                                th Site Name
                                th Address
                                th City
                                th County
                                th Postcode
                                th Country
                                th Contact
                                th Status

                            tbody
                                each site, i in sites

                                            tr.odd.gradeX
                                            td
                                                a(href="/sites/"+site._id)=site.name
                                            td
                                                = site.address
                                            td
                                                = site.city
                                            td
                                                = site.county
                                            td
                                                = site.postcode
                                            td
                                                = site.country
                                            td
                                                = site.phonenumber
                                            td
                                                if site.status == "Active"
                                                    span.label.label-success #{site.status}
                                                else
                                                    span.label.label-danger #{site.status}    


                #devices.tab-pane.fade
                    
                #users.tab-pane.fade

extends layout2

block content
    #page-wrapper
        .row
        .col-lg-12
        br
        h3 #{title}
        form(method='POST', action='/users/register')
            #form-group
                label Admin:
                select.form-control(name='admin', type='text')
                    option User
                    option Admin
                        if user
                            if user.admin == "Super Admin"
                                option Super Admin
            #form-group
                label Name:
                input.form-control(name='name', type='text')
            #form-group
                label Email:
                input.form-control(name='email', type='text')
            #form-group
                label Phone Number:
                input.form-control(name='phone', type='text')    
            #form-group
                label Company:
                select.form-control(name='company', type='text')
                    each company, i in companies
                        option #{company.name}
            #form-group
                label Username:
                input.form-control(name='username', type='text')
            #form-group
                label Password:
                input.form-control(name='password', type='password')
            #form-group
                label Confirm:
                input.form-control(name='password2', type='password')
                br
            input.btn.btn-primary(type='submit', value='Submit')


extends layout
    
block content
    br
    h1 #{title}
    form(method='POST', action='/users/register')
        #form-group
            label Admin:
            select.form-control(name='admin', type='text')
                option User
                option Admin
                option Super Admin
        #form-group
            label Name:
            input.form-control(name='name', type='text')
        #form-group
            label Email:
            input.form-control(name='email', type='text')
        #form-group
            label Company:
            input.form-control(name='company', type='text')
        #form-group
            label Site:
            input.form-control(name='site', type='text')
        #form-group
            label Username:
            input.form-control(name='username', type='text')
        #form-group
            label Password:
            input.form-control(name='password', type='password')
        #form-group
            label Confirm:
            input.form-control(name='password2', type='password')    
            br  
        input.btn.btn-primary(type='submit', value='Submit')     
extends layout2

block content
  #page-wrapper
    .row
        .col-lg-12
          .panel.panel-default
            .panel-heading
              | Company Information
            // /.panel-heading
            .panel-body
              // Nav tabs
              ul.nav.nav-tabs
                li.active
                  a(href="#home" data-toggle="tab") Information
                li
                  a(href="#profile" data-toggle="tab") Roles
              // Tab panes
              .tab-content
                #home.tab-pane.fade.in.active
                  .row
                    .col-lg-6
                      h1.page-header #{title}
                    .col-lg-6
                      h1.page-header #{status}
                  .row
                    .col-lg-6
                      h4 Address: #{site.address}
                      h4 City: #{site.city}
                      h4 Postcode: #{site.postcode}
                      h4 Country: #{site.county}
                    .col-lg-4
                      h1 CONTROLS
                      a.btn.btn-primary(href='/devices/add') Add Device
                      a.btn.btn-primary(href='#exampleModal', data-toggle='modal', data-target='#exampleModal') Edit Site
                      #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
                        .modal-dialog(role='document')
                          .modal-content
                            .modal-header
                              h5#exampleModalLabel.modal-title Edit Site
                              button.close(type='button', data-dismiss='modal', aria-label='Close')
                                span(aria-hidden='true') Ã—    
                            .modal-body
                                form(method='POST', action='/sites/edit'+site.id)
                                  #form-group
                                      label Status:
                                      input.form-control(name='pcname', type='text', value=site.status)
                                  #form-group
                                      label Site Name:
                                      input.form-control(name='ipaddress', type='text' value= site.name)
                                  #form-group
                                      label Email:
                                      input.form-control(name='macaddress', type='text' value=site.email)
                                  #form-group
                                      label Address:
                                      input.form-control(name='macaddress', type='text' value=site.address)
                                  #form-group
                                      label City:
                                      input.form-control(name='macaddress', type='text' value=site.city)
                                  #form-group
                                      label County:
                                      input.form-control(name='macaddress', type='text' value=site.county)
                                  #form-group
                                      label Phone Number:
                                      input.form-control(name='macaddress', type='text' value=site.phonenumber)                    
                                  #form-group
                                      label Company:
                                      select.form-control(name='company', type='text')
                                          each company, i in companies
                                              option(value= company.name) #{company.name}
                                  #form-group
                                      label Site:
                                      select.form-control(name='site', type='text')
                                          each site, i in sites
                                              each company in companies
                                                  if site.company == company.name
                                                      option(value= site.name) #{site.name}
                                  br                    
                                  input.btn.btn-primary(type='submit', value='Submit')
                                  a.btn.btn-danger(href='/devices/checkin') Cancel
                  .row
                    .col-lg-12
                      .panel.panel-default
                        .panel-heading
                          | Devices
                        // /.panel-heading
                        .panel-body
                          table#dataTables-example.table.table-striped.table-bordered.table-hover(width="100%")
                            thead
                              tr
                                th Device Name
                                th Site
                                th Company
                                th IP Address
                            tbody
                              each device, i in devices
                                if user
                                  if user.site == device.site && device.site == site.name
                                    if user.admin == "Super Admin"
                                    tr.odd.gradeX
                                      td
                                        a(href="/devices/"+ device._id)= device.pcname
                                      td
                                        = device.site
                                      td
                                        = device.company
                                      td
                                        = device.ipaddress

                #profile.tab-pane.fade
                  h4 Profile Tab
